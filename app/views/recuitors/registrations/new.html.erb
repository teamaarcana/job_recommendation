<section class="job-bg user-page">
  <div class="container">
    <div class="row text-center">
      <!-- user-login -->
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="user-account job-user-account">
          <h2>Create An Account</h2>
            <ul class="nav nav-tabs text-center" role="tablist">
              <li role="presentation" ><%=link_to 'Find A Job',new_seeker_registration_path %></li>
              <li role="presentation" class="active"><%=link_to 'Post A Job',new_recuitor_registration_path %></li>
            </ul>
              <div role="tabpanel" class="tab-pane" id="post-job">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.label :company_name %><br />
                    <%= f.text_field :company_name, autofocus: true , class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :contact_no %><br />
                    <%= f.text_field :contact_no, class:"form-control" %>
                  </div>
                   <div class="form-group">
                    <%= f.label :address %><br />
                    <%= f.text_field :address, class:"form-control" %>
                  </div>
                   <div class="form-group">
                    <%= f.label :pan_no %><br />
                    <%= f.text_field :pan_no, class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class:"form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum),</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Sign up",class:"btn" %>
                    <%= render "seekers/shared/links" %>
                  </div>
                <% end %>
              </div>
            </div>
        </div>
      </div><!-- user-login -->
    </div><!-- row -->
  </div><!-- container -->
</section><!-- signup-page -->
